# Google Cloud & Vertex AI
GOOGLE_CLOUD_PROJECT_ID=your-project-id-here
GOOGLE_AI_API_KEY=your-google-ai-api-key-here
GOOGLE_CLOUD_API_KEY=your-google-cloud-api-key-here
VERTEX_AI_API_KEY=your-vertex-ai-api-key-here
GOOGLE_CLIENT_ID=your-google-client-id-here
GOOGLE_OAUTH_API_KEY=your-google-oauth-api-key-here
GEMINI_API_KEY=your-gemini-api-key-here
GOOGLE_APPLICATION_CREDENTIALS=your-google-app-credentials-here

# Firebase
NEXT_PUBLIC_FIREBASE_API_KEY=your-firebase-api-key-here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-firebase-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
NEXT_PUBLIC_FIREBASE_APP_ID=your-app-id

# YouTube Data API
YOUTUBE_API_KEY=your-youtube-api-key-here

# Pixabay API (for BGM)
PIXABAY_API_KEY=your-pixabay-api-key-here

# Application Settings
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# Credits System
DEFAULT_FREE_CREDITS=10
DEFAULT_PAID_CREDITS=0

# File Upload
MAX_FILE_SIZE=50MB
UPLOAD_DIR=uploads

# FFmpeg
FFMPEG_PATH=/usr/bin/ffmpeg
FFPROBE_PATH=/usr/bin/ffprobe

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600000

# Analytics
NEXT_PUBLIC_GA_TRACKING_ID=your-ga-tracking-id

# Feature Flags
ENABLE_AI_GENERATION=true
ENABLE_YOUTUBE_UPLOAD=true
ENABLE_TEMPLATES=true
ENABLE_BGM=true
ENABLE_FONTS=true

# Hugging Face API Configuration
# HUGGINGFACE_API_KEY=your-huggingface-api-key-here

# Context7 API
# CONTEXT7_API_KEY=your-context7-api-key-here

# Texter AI API
TEXTER_AI_API_KEY=your-texter-ai-api-key-here